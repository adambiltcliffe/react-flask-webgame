root = true

[*]
end_of_line = crlf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py}]
charset = utf-8

[*.py]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 2

[package.json]
indent_style = space
indent_size = 2
